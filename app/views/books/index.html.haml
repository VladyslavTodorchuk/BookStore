%main.container
  %h1.general-title-margin= t('catalog_page.title')
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          = t('catalog_page.sorting.newer_first')
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          %li
            %a{href: "#"}= t('catalog_page.sorting.newer_first')
          %li
            %a{href: "#"}= t('catalog_page.sorting.popular_first')
          %li
            %a{href: "#"}= t('catalog_page.sorting.price.low_to_high')
          %li
            %a{href: "#"}= t('catalog_page.sorting.price.high_to_low')
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        %a.filter-link{href: "/books"}
          = t('catalog_page.all')
          %span.badge.general-badge= @books_count
      %a.filter-link{href: "#"}
      - @categories.each do |category|
        %li.mr-35
          .filter-link
            = link_to category.name, books_path(category: category.id), class: 'collapse-link'
            %span.badge.general-badge= category.books.count
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10= t('catalog_page.filter_by_categories')
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        = t('catalog_page.sorting.newer_first')
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          %a{href: "#"}= t('catalog_page.sorting.newer_first')
        %li
          %a{href: "#"}= t('catalog_page.sorting.popular_first')
        %li
          %a{href: "#"}= t('catalog_page.sorting.price.low_to_high')
        %li
          %a{href: "#"}= t('catalog_page.sorting.price.high_to_low')
    %p.lead.small.mb-10= t('catalog_page.sort_by')
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        = t('catalog_page.sorting.newer_first')
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          %a{href: "#"}= t('catalog_page.sorting.newer_first')
        %li
          %a{href: "#"}= t('catalog_page.sorting.popular_first')
        %li
          %a{href: "#"}= t('catalog_page.sorting.price.low_to_high')
        %li
          %a{href: "#"}= t('catalog_page.sorting.price.high_to_low')

  = render partial: 'books/index/catalog'