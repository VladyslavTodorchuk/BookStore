%main.container
  %h1.general-title-margin= t('catalog_page.title')
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          = t('catalog_page.sorting.newer_first')
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          %li
            = link_to t('catalog_page.sorting.newer_first'), books_path(category: params[:category], sort: 'created_at DESC')
          %li
            = link_to t('catalog_page.sorting.popular_first'), books_path(category: params[:category], sort: 'created_at')
          %li
            = link_to t('catalog_page.sorting.price.low_to_high'), books_path(category: params[:category], sort: 'price')
          %li
            = link_to t('catalog_page.sorting.price.high_to_low'), books_path(category: params[:category], sort: 'price DESC')
          %li
            = link_to t('catalog_page.sorting.title.A-Z'), books_path(category: params[:category], sort: 'title')
          %li
            = link_to t('catalog_page.sorting.title.Z-A'), books_path(category: params[:category], sort: 'title DESC')
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        %a.filter-link{href: "/books?sort=title"}
          = t('catalog_page.all')
          %span.badge.general-badge= @books_count
      %a.filter-link{href: "#"}
      - @categories.each do |category|
        %li.mr-35
          .filter-link
            = link_to category.name, books_path(category: category.id, sort: params[:sort]), class: 'collapse-link'
            %span.badge.general-badge= category.books.count
    .dropdowns.mb-25.visible-xs
      = render partial: 'books/index/mobile_filter'
      = render partial: 'books/index/mobile_sort'

  .mb-120
    = render partial: 'books/index/catalog', object: @books
  .text-center
    = render partial: 'books/index/view_more'