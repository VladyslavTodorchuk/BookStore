%p.lead.small.mb-10= t('catalog_page.sort_by')
.dropdown
  %a#mobile.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    = t('catalog_page.sorting.newer_first')
    %i.fa.fa-angle-down.dropdown-icon.pull-right
  %ul.dropdown-menu
    %li
      = link_to t('catalog_page.sorting.newer_first'), books_path(category: params[:category], sort: 'created_at')
    %li
      = link_to t('catalog_page.sorting.popular_first'), books_path(category: params[:category], sort: 'created_at')
    %li
      = link_to t('catalog_page.sorting.price.low_to_high'), books_path(category: params[:category], sort: 'price')
    %li
      = link_to t('catalog_page.sorting.price.high_to_low'), books_path(category: params[:category], sort: 'price DESC')
