  .col-sm-6
    %h1.mt-res-0= @book.title
    %p.lead.small
      - @book.authors.each do |author|
        = author.first_name
        = author.last_name
    .row
      .col-xs-12.col-md-4
        %p.h1.in-gold-500.mt-10#price
          â‚¬
          = @book.price
      .col-xs-5.col-md-3
        .input-group.general-position
          %a.input-link.dec
            %i.fa.fa-minus.line-height-40{ onclick: "decrementValue(#{@book.price});" }
          %input#counter.form-control.quantity-input{name: 'counter', value: 1}
          %a.input-link.inc
            %i.fa.fa-plus.line-height-40{ onclick: "incrementValue(#{@book.price});" }
      .col-xs-7.col-md-5
        %button.btn.btn-default.pull-right.general-position= t('book_page.add_to_card')
    = render partial: 'books/show/sort_description'
    .general-info-wrap.divider-lg
