%main.container
  = render 'progress'
  .hidden-xs.hidden-sm
    .row
      .col-md-5
        %h3.general-subtitle= t('checkout.address_page.billing')
      .col-md-5.col-md-offset-1
        %h3.general-subtitle= t('checkout.address_page.shipping')
    %div
      #billing
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t("settings.billing")
          = render 'checkouts/address/address_form', address: @user_billing
      #shipping
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t("settings.shipping")
          = render 'checkouts/address/address_form', address: @user_shipping
          .form-group.checkbox
            %label.checkbox-label
              %input.checkbox-input{type: "checkbox", hidden: "true"}
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text= t('checkout.address_page.user_billing')
    .general-text-align.mb-60
      = render partial: 'summary'
      .text-center
        = link_to t('checkout.save_continue'), checkout_path(step: :delivery), class: 'btn btn-default center-block mb-20', method: :get
