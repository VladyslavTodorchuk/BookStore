%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('header.sing_up')
    %a.general-login-icon{href: '#'}
      %i.fa.fa-facebook-official
    %p.general-login-text= t('auth.or')
  .general-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group.mb-30
        = f.label :user_email, t('auth.enter_email'), class: 'control-label input-label'
        = f.email_field(:email,autofocus: true,autocomplete: 'email',class: 'form-control',required: true, placeholder: t('auth.enter_email'))
      .form-group.mb-30
        = f.label :user_password, t('auth.password'), class: 'control-label input-label'
        = f.password_field(:password,autocomplete: 'password',class: 'form-control',required: true, placeholder: t('auth.password'))
      .form-group.mb-30
        = f.label :user_password_confirmation, t('auth.confirm_password'), class: 'control-label input-label'
        = f.password_field(:password_confirmation,autocomplete: 'password_confirmation',class: 'form-control', required: true, placeholder: t('auth.confirm_password'))
      .text-center
        = f.submit t('header.sing_up'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = link_to t('auth.have_account'), new_user_session_path, class: 'in-gold-500'