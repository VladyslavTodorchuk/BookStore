%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('header.sing_up')
    = link_to "", user_facebook_omniauth_authorize_path, method: :post, class: 'general-login-icon fa fa-facebook-official', style: 'font-size: 30px;'
    %p.general-login-text= t('login.or')
  .general-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
        = f.label :user_email, t('login.enter_email'), class: 'control-label input-label'
        = f.email_field(:email,autofocus: true,autocomplete: 'email',class: 'form-control',required: true, placeholder: t('login.enter_email'))
      .form-group.mb-30
        = f.label :user_password, t('login.password'), class: 'control-label input-label'
        = f.password_field(:password,autocomplete: 'password',class: 'form-control',required: true, placeholder: t('login.password'))
      .form-group.mb-30
        = f.label :user_password_confirmation, t('login.confirm_password'), class: 'control-label input-label'
        = f.password_field(:password_confirmation,autocomplete: 'password_confirmation',class: 'form-control', required: true, placeholder: t('login.confirm_password'))
      .text-center
        = f.submit t('header.sing_up'), class: 'btn btn-default mb-20', id: 'sing_up'
  %p.general-sign-text.text-center
    = link_to t('login.have_account'), new_user_session_path, class: 'in-gold-500'
